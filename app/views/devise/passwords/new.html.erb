<div class="h-full w-full max-w-xs mx-auto align-middle">
  <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <h2 class="text-center">Esqueceu sua senha?</h2>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-6">
        <%= f.label :email, "Email", class: "block text-sm font-bold mb-2 text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="flex flex-col space-y-4">
        <%= f.submit "Enviar email de redefinição", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full text-center" %>
        <div class="devise-links-right">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
