<% if resource.errors.any? %>
  <div class="error-messages-container" data-turbo-cache="false">
    <div class="error-header">
      <div class="error-icon">⚠️</div>
      <h3 class="error-title">
        <%= pluralize(resource.errors.count, "erro", "erros") %> encontrado<%= "s" if resource.errors.count > 1 %>:
      </h3>
    </div>
    <ul class="error-list">
      <% resource.errors.full_messages.each do |message| %>
        <li class="error-item">
          <span class="error-bullet">•</span>
          <%= message %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
