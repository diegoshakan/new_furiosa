<%# Link showing page number
  - available local variables
    page:          a page object for "this" page
    url:           url to this page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<span class="<%= 'bg-violet-500 text-gray' if page.current? %> px-3 py-2 text-sm font-medium text-black-500 bg-violet-300 border border-gray-300 rounded-md hover:bg-blue-700">
  <%= link_to_unless page.current?, page, url, {remote: remote, rel: page.rel, class: 'block'} %>
</span>
