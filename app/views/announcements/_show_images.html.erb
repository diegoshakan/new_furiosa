<div class="grid grid-cols-2 md:grid-cols-5 gap-2 mt-4">
  <% if @announcement.images.attached? %>
    <% @announcement.images.each_with_index do |image, index| %>
      <%= image_tag image, 
          class: "w-full h-32 object-cover rounded cursor-pointer hover:opacity-80 transition-opacity", 
          data: { 
            image_index: index,
            image_url: url_for(image)
          },
          onclick: "window.imageModalController.openModal(event)"
          %>
    <% end %>
