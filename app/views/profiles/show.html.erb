<div class="container mx-auto p-4">
  <h1 class="text-3xl font-bold">Meu Perfil</h1>
  <p>Nome: <%= @user.name %></p>
  <p>Email: <%= @user.email %></p>
  <p>Nome Fantasia: <%= @user.fantasy_name || "Não definido" %></p>
  <% if @user.address %>
    <p>Endereço: <%= "#{@user.address.street}, #{@user.address.city} - #{@user.address.state}" %></p>
  <% end %>
  <%= link_to "Editar Perfil", edit_profile_path, class: "text-blue-500" %>
</div>
