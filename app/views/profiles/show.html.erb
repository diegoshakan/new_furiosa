
  <div class="w-full max-w-5xl mx-auto px-6 py-12">
    <div class="max-w-4xl mx-auto">
      <!-- Header com Avatar -->
      <div class="text-center mb-12">
        <div class="inline-flex items-center justify-center w-32 h-32 bg-gradient-to-r from-indigo-500 to-purple-600 rounded-full mb-6 shadow-xl">
          <span class="text-4xl font-bold text-white"><%= @user.name.first.upcase %></span>
        </div>
        <h1 class="text-5xl font-bold bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent mb-4">
          <%= @user.name %>
        </h1>
        <p class="text-xl text-gray-600"><%= @user.email %></p>
      </div>

      <!-- Grid de Informações -->
      <div class="grid md:grid-cols-2 gap-8 mb-12">
        <!-- Card de Informações Pessoais -->
        <div class="bg-white/70 backdrop-blur-sm rounded-2xl p-8 shadow-xl border border-white/20">
          <div class="flex items-center mb-6">
            <div class="w-12 h-12 bg-indigo-100 rounded-xl flex items-center justify-center mr-4">
              <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
            <h2 class="text-2xl font-bold text-gray-800">Informações Pessoais</h2>
          </div>
          
          <div class="space-y-6">
            <div>
              <label class="text-sm font-semibold text-gray-500 uppercase tracking-wide">Nome Completo</label>
              <p class="text-lg text-gray-800 mt-1 font-medium"><%= @user.name %></p>
            </div>
            
            <div>
              <label class="text-sm font-semibold text-gray-500 uppercase tracking-wide">Email</label>
              <p class="text-lg text-gray-800 mt-1 font-medium"><%= @user.email %></p>
            </div>
            
            <% if @user.fantasy_name.present? %>
              <div>
                <label class="text-sm font-semibold text-gray-500 uppercase tracking-wide">Nome Fantasia</label>
                <p class="text-lg text-gray-800 mt-1 font-medium"><%= @user.fantasy_name %></p>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Card de Endereço -->
        <div class="bg-white/70 backdrop-blur-sm rounded-2xl p-8 shadow-xl border border-white/20">
          <div class="flex items-center mb-6">
            <div class="w-12 h-12 bg-green-100 rounded-xl flex items-center justify-center mr-4">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <h2 class="text-2xl font-bold text-gray-800">Endereço</h2>
          </div>
          
          <% if @user.address %>
            <div class="space-y-6">
              <div>
                <label class="text-sm font-semibold text-gray-500 uppercase tracking-wide">Endereço Completo</label>
                <p class="text-lg text-gray-800 mt-1 font-medium">
                  <%= "#{@user.address.street} #{@user.address.number} - #{@user.address.zipcode}, #{@user.address.city} - #{@user.address.state}" %>
                </p>
              </div>
              
              <% if @user.address.reference_point.present? %>
                <div>
                  <label class="text-sm font-semibold text-gray-500 uppercase tracking-wide">Ponto de Referência</label>
                  <p class="text-lg text-gray-800 mt-1 font-medium"><%= @user.address.reference_point %></p>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-8">
              <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
              </div>
              <p class="text-gray-500 text-lg">Nenhum endereço cadastrado</p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Botões de Ação -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <%= link_to edit_profile_path, class: "group relative inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-white bg-gradient-to-r from-indigo-600 to-purple-600 rounded-xl shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all duration-200" do %>
          <svg class="w-5 h-5 mr-2 group-hover:rotate-12 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
          Editar Perfil
        <% end %>
        
        <% if @user.address %>
          <%= link_to edit_address_path(@user.address), class: "group relative inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-white bg-gradient-to-r from-green-600 to-emerald-600 rounded-xl shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all duration-200" do %>
            <svg class="w-5 h-5 mr-2 group-hover:rotate-12 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            Editar Endereço
          <% end %>
        <% else %>
          <%= link_to new_address_path, class: "group relative inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-white bg-gradient-to-r from-green-600 to-emerald-600 rounded-xl shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all duration-200" do %>
            <svg class="w-5 h-5 mr-2 group-hover:rotate-12 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            Adicionar Endereço
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

