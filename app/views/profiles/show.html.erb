<div class="container mx-auto p-4">
  <h1 class="text-3xl font-bold">Meu Perfil</h1>
  <p>Nome: <%= @user.name %></p>
  <p>Email: <%= @user.email %></p>
  <% if @user.fantasy_name.present? %>
    <p>Nome Fantasia: <%= @user.fantasy_name %></p>
  <% end %>
  

  <% if @user.address %>
    <p>Endereço: <%= "#{@user.address.street} #{@user.address.number} - #{@user.address.zipcode}, #{@user.address.city} - #{@user.address.state}" %></p>
    <% if @user.address.reference_point.present? %>
      <p>Ponto de Referência: <%= @user.address.reference_point %></p>
    <% end %>
  <% end %>

  <div> <%= link_to "Editar Perfil", edit_profile_path, class: "text-blue-500" %> </div>
  <% if @user.address %>
    <div> <%= link_to "Editar Endereço", edit_address_path(@user.address), class: "text-blue-500" %> </div>
  <% else %>
    <div> <%= link_to "Adicionar Endereço", new_address_path, class: "text-blue-500" %> </div>
  <% end %>
</div>
